<?xml version="1.0"?>


    <ScrollView
    tools:context=".MainActivity"
    android:background="@drawable/mains23"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">



            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:srcCompat="@drawable/logo" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/design"
                android:layout_marginTop="150dp"
                app:cardBackgroundColor="#00FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/logincard"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/rt"
                        android:padding="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/linear_email"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/email" />

                        <EditText
                            android:id="@+id/edit_mail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email ID"
                            android:textSize="19sp"
                            android:layout_gravity="center_vertical"
                            android:textColorHint="@color/white"
                            android:fontFamily="@font/alegreya_sans_sc_medium"
                            android:backgroundTint="@color/white" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_below="@id/linear_email"
                        android:layout_marginTop="10dp"
                        android:id="@+id/linear_pass"
                        android:layout_marginLeft="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/padlock" />

                        <EditText
                            android:id="@+id/edit_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:textSize="19sp"
                            android:layout_gravity="center_vertical"
                            android:textColorHint="@color/white"
                            android:fontFamily="@font/alegreya_sans_sc_medium"
                            android:backgroundTint="@color/white" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/login_btn"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_below="@id/linear_pass"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/front_page">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/login"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Secure Login"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/alegreya_sans_sc_medium"
                            android:textSize="18sp" />

                    </LinearLayout>





                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/charity"/>



                </RelativeLayout>




            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/design"
android:padding="10dp"
                android:id="@+id/volunteer"
                android:fontFamily="@font/alegreya_sans_sc_medium"
                android:text="Users can volunteer themselves by providing information related to Covid Resources in Submission Card"
                android:textColor="#630C33"
                android:textSize="23sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/volunteer"
                android:text="Access"
                android:background="@drawable/front_page"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/alegreya_sans_sc_medium"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/privacy"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/button"
                android:text="Privacy Policy"
                android:background="@drawable/front_page"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:textSize="18sp"
                android:fontFamily="@font/alegreya_sans_sc_medium"
                android:layout_centerHorizontal="true"/>











        </RelativeLayout>






    </FrameLayout>



</ScrollView>



