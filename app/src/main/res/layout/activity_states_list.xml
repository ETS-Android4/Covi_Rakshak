<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="870dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mains23" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:id="@+id/headtext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">

            <TextView

                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Covi "
                android:textSize="35sp"
                android:textColor="#7C063B"
                android:gravity="center"
                android:textAllCaps="false"
                android:fontFamily="@font/alegreya_sans_sc_medium" />


            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Rakshak"
                android:textColor="#0D1855"
                android:textSize="35sp"
                android:fontFamily="@font/alegreya_sans_sc_medium" />




        </LinearLayout>

        <TextView
            android:id="@+id/statelist_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headtext"
            android:textSize="25sp"
            android:textColor="#040404"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/alegreya_sans_sc_medium"
            android:text="States : " />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/statelist_txt"
            android:id="@+id/s"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <CheckBox
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uttar Pradesh"
                android:textSize="20sp"
                android:padding="20dp"
                android:background="@drawable/space"
                android:fontFamily="@font/alegreya_sans_sc_medium" />


            <CheckBox
                android:id="@+id/c2"
                android:background="@drawable/space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Haryana"
                android:padding="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/alegreya_sans_sc_medium" />

            <CheckBox
                android:id="@+id/c3"
                android:layout_width="match_parent"
                android:background="@drawable/space"
                android:layout_height="wrap_content"
                android:text="Delhi"
                android:padding="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/alegreya_sans_sc_medium" />


        </LinearLayout>

        <Button
            android:id="@+id/proceed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Proceed"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:fontFamily="@font/alegreya_sans_sc_medium"
            android:background="@drawable/search_background"
            android:textColor="@color/white"/>


























    </RelativeLayout>

</ScrollView>