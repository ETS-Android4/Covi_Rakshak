<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="870dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mains23" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:id="@+id/headtext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/alegreya_sans_sc_medium"
                android:gravity="center"
                android:text="Covi "
                android:textAllCaps="false"
                android:textColor="#7C063B"
                android:textSize="25sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_sc_medium"
                android:text="Rakshak"
                android:layout_weight="5"
                android:textColor="#0D1855"
                android:textSize="25sp" />




        </LinearLayout>

        <TextView
            android:id="@+id/descript_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headtext"
            android:textSize="20sp"
            android:textColor="#040404"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/alegreya_sans_sc_medium"
            android:text="For the users of Covi Rakshak" />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/descript_users"
            android:text="You're visiting "
            android:textSize="20sp"
            android:textColor="#040404"
            android:layout_marginLeft="0dp"
            android:fontFamily="@font/alegreya_sans_sc_medium" />



        <androidx.cardview.widget.CardView
            android:id="@+id/card_hospitals"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo"
            app:cardBackgroundColor="#DF5CB527"
            app:cardCornerRadius="40dp"  >



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="250dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/alegreya_sans_sc_medium"
                        android:gravity="center"
                        android:text="Covid Hospitals"
                        android:textColor="#FDFDFD"
                        android:textSize="22sp" />


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_weight="3.4"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#FDFDFD" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Verified By Team Covi Rakshak"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#E4DCDC" />






                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bed" />





            </LinearLayout>





        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_oxygen"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/card_hospitals"
            app:cardBackgroundColor="#C82FBAD1"
            app:cardCornerRadius="40dp"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="250dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/alegreya_sans_sc_medium"
                        android:gravity="center"
                        android:text="Oxygen"
                        android:textColor="#FDFDFD"
                        android:textSize="22sp" />


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_weight="3.4"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#FDFDFD" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Verified By Team Covi Rakshak"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#E4DCDC" />






                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/oxygen" />





            </LinearLayout>




        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_plasma"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/card_oxygen"
            app:cardBackgroundColor="#E1F863A6"
            app:cardCornerRadius="40dp"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="250dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/alegreya_sans_sc_medium"
                        android:gravity="center"
                        android:text="Plasma Donor's"
                        android:textColor="#FDFDFD"
                        android:textSize="22sp" />


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_weight="3.4"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#FDFDFD" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Verified By Team Covi Rakshak"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#E4DCDC" />






                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ladydonor" />



            </LinearLayout>




        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:id="@+id/card_selfcare"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/card_plasma"
            app:cardBackgroundColor="#B54FE8"
            app:cardCornerRadius="40dp"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="270dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/alegreya_sans_sc_medium"
                        android:gravity="center"
                        android:text="Covid Self Care"
                        android:textColor="#FDFDFD"
                        android:textSize="22sp" />


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_weight="3.4"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#FDFDFD" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="From Verified Sources"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#E4DCDC" />






                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/selfcare" />




            </LinearLayout>



        </androidx.cardview.widget.CardView>



















    </RelativeLayout>

</ScrollView>