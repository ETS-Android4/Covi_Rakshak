<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1500dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mains23" />


        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer's"
                android:textSize="35sp"
                android:fontFamily="@font/alegreya_sans_sc_medium"
                android:textColor="#9C1351"
                android:gravity="center"
                android:layout_marginTop="1dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="1dp"
                android:background="#970446"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/soumen"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="#A5084F"
                        android:fontFamily="@font/alegreya_sans_sc_medium"
                        android:text="Soumen Paul\nCSE Under Grad\n(2020-2024)"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/in1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/linkedin"
                        android:layout_weight="2.5"/>





                </LinearLayout>







            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#970446"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="#A5084F"
                        android:fontFamily="@font/alegreya_sans_sc_medium"
                        android:text="Yash Tyagi\nECE Under Grad\n(2019-2023)"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/in2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/linkedin"
                        android:layout_weight="2.5"/>





                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/yash"
                    android:layout_weight="1"/>







            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#970446"/>


            <TextView
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Vision"
                android:textSize="35sp"
                android:textColor="#780539"
                android:fontFamily="@font/alegreya_sans_sc_medium"
                android:gravity="center"/>

            <TextView
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="3dp"
                android:layout_marginTop="1dp"
                android:background="#970446"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:padding="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/charity"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="#710636"
                        android:fontFamily="@font/alegreya_sans_sc_medium"
                        android:text="We developed Covi Rakshak as an effort to do our bit in this humanity drive, to stand with our own people and help them in this humanitarian crisis.\nJoin us and be a part of this drive, Jai hind, Jai Bharat"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>





                </LinearLayout>









            </LinearLayout>






        </LinearLayout>



    </RelativeLayout>

</ScrollView>