<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="870dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mains23" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:id="@+id/headtext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">

            <TextView

                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Covi "
                android:textSize="35sp"
                android:textColor="#7C063B"
                android:gravity="center"
                android:textAllCaps="false"
                android:fontFamily="@font/alegreya_sans_sc_medium" />


            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Rakshak"
                android:textColor="#0D1855"
                android:textSize="35sp"
                android:fontFamily="@font/alegreya_sans_sc_medium" />




        </LinearLayout>

        <TextView
            android:id="@+id/districtlist_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headtext"
            android:textSize="25sp"
            android:textColor="#040404"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/alegreya_sans_sc_medium"
            android:text="Districts : " />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/districtlist_txt"
            android:id="@+id/d"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">




        </LinearLayout>

        <Button
            android:id="@+id/proceed_d"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/d"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Proceed"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:fontFamily="@font/alegreya_sans_sc_medium"
            android:background="@drawable/search_background"
            android:textColor="@color/white"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proceed_d"
            android:id="@+id/demo">

            <TextView
                android:id="@+id/d1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text=" "/>

            <TextView
                android:id="@+id/d2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text=" "/>

            <TextView
                android:id="@+id/d3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text=" "/>

            <TextView
                android:id="@+id/d4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text=" "/>

            <TextView
                android:id="@+id/d5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text=" "/>

            <TextView
                android:id="@+id/d6"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text=" "/>

            <TextView
                android:id="@+id/d7"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text=" "/>

            <TextView
                android:id="@+id/d8"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text=" "/>








        </LinearLayout>

























    </RelativeLayout>

</ScrollView>