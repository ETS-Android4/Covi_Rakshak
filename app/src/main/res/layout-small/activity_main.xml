<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="870dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mains23" />


        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:id="@+id/headtext"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/alegreya_sans_sc_medium"
                android:gravity="center"
                android:text="Covi "
                android:textAllCaps="false"
                android:textColor="#7C063B"
                android:textSize="25sp" />


            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_sc_medium"
                android:text="Rakshak"
                android:textColor="#0D1855"
                android:textSize="25sp" />


        </LinearLayout>

        <TextView
            android:layout_width="400dp"
            android:id="@+id/paul"
            android:layout_height="wrap_content"
            android:layout_above="@id/card_state"
            android:layout_below="@id/headtext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/alegreya_sans_sc_medium"
            android:text="Presents all the Verified Data of Hospitals, Oxygen sources and Plasma being handled by a team voluntarily."
            android:textColor="#37051B"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_state"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#F0FFCDEB"
            app:cardCornerRadius="40dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_states"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/alegreya_sans_sc_medium"
                        android:gravity="center"
                        android:text="States"
                        android:textColor="#DD146F"
                        android:textSize="25sp" />


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3.4"
                        android:background="#8F1E51"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:textColor="#801444"
                        android:textSize="15sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:text="Select your State"
                        android:textColor="#E86AA2"
                        android:textSize="15sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/state" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_district"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/card_state"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#F0FFCDEB"
            app:cardCornerRadius="40dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/district_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/alegreya_sans_sc_medium"
                        android:gravity="center"
                        android:text="Districts"
                        android:textColor="#DD146F"
                        android:textSize="25sp" />


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3.4"
                        android:background="#8F1E51"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:textColor="#FDFDFD"
                        android:textSize="15sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:text="Select your District"
                        android:textColor="#E86AA2"
                        android:textSize="15sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/district" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_district"
            android:orientation="vertical">



                <Button
                    android:id="@+id/searchbtn"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/search_background"
                    android:fontFamily="@font/alegreya_sans_sc_medium"
                    android:padding="10dp"
                    android:text="Instant\t\tSearch"
                    android:textAllCaps="false"
                    android:textColor="#F8F1F1"
                    android:textSize="20dp" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/front_page"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/customer"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="About us"
                    android:textSize="20sp"
                    android:onClick="about"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/alegreya_sans_sc_medium" />










            </LinearLayout>







            <androidx.cardview.widget.CardView
                android:id="@+id/card_dev"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/logo"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="#F0FFCDEB"
                app:cardCornerRadius="40dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dev_btn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.6"
                            android:fontFamily="@font/alegreya_sans_sc_medium"
                            android:gravity="center"
                            android:text="Developer's Mode"
                            android:textColor="#DD146F"
                            android:textSize="25sp" />


                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="3.4"
                            android:background="#8F1E51"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:textColor="#801444"
                            android:textSize="15sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:text="Access feature of developers mode"
                            android:textColor="#E86AA2"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/gamer" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </RelativeLayout>

</ScrollView>